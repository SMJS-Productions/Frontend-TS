{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "ES6",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": [
    "./src/**/*.ts"
  ]
}